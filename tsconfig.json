{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "es2017",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": ".",
		"incremental": true,
		"skipLibCheck": true,
		"paths": {
			"@core/*": ["./src/@core/*"],
			"@domain/*": ["./src/domain/*"],
			"@infrastructure/*": ["./src/infrastructure/*"],
			"@api/*": ["./src/api/*"]
		}
	}
}
